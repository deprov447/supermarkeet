<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>sale page</title>
    <link rel="stylesheet" href="/css/index.css" type="text/css">
    <link rel="stylesheet" href="/css/adminSale.css" type="text/css">
</head>
<body class="bg-cover">
  
  <%- include("partials/navbar.ejs") %>

<div class="container">
    <div class="card shadow my-5">
      <h4 class="card-header">Table</h4>
      <div class="card-body">
        <table class="table table-striped table-bordered table-hover table-responsive">
          <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity Sold</th>
                <th>Profit Earned</th>
                <th>Median time of sale</th>
              <th data-sortable="false">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i=0; i<data.length; i++ ){ %>
                <tr>
                    <% var rand = Math.random() %>
                    <td><%= data[i]._id %></td>
                    <td><%= data[i].productName %></td>
                    <td><%= Math.ceil(data[i].productQuantity * rand) %></td>
                    <td><%= Math.floor(data[i].productQuantity * data[i].productMRP * rand) %> </td>
                    <td><%= new Date(+(new Date()) - Math.floor(Math.random()*10000000000)) %></td>
                    <td>
                        <div class="btn-group btn-group-sm" role="group">
                        <!-- <button type="button" class="btn btn-outline-dark"><i class="fas fa-eye"></i></button> -->
                        <!-- <button type="button" class="btn btn-outline-dark"><i class="fas fa-pen"></i></button> -->
                        <button type="button" class="btn btn-outline-dark"><i class="fas fa-trash"></i></button>
                        </div>
                    </td>
                </tr>
                <% } %>
          </tbody>
        </table>
      </div>
      <div class="card-footer"></div>
    </div>
  </div>

    min profit
    max profit
    quickest sell
    <script src="/js/adminSale.js"></script>
</body>
</html>

